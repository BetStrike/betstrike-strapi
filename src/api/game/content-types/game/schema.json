{
  "collectionName": "games",
  "info": {
    "singularName": "game",
    "pluralName": "games",
    "displayName": "Game",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "provider": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::provider.provider",
      "inversedBy": "games"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "popularLevel": {
      "type": "integer",
      "required": true
    },
    "rtp": {
      "type": "float",
      "required": false
    },
    "releaseDate": {
      "type": "date",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": ["ORIGINAL", "LIVE_GAME", "SLOTS", "GAME_SHOW"],
      "required": true
    }
  }
}
